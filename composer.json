{
  "name": "bruery/platform-core",
  "type": "library",
  "description": "Bruery, BAP, Platform Core",
  "keywords": ["Symfony2", "Bruery", "BAP", "Platform"],
  "homepage": "https://bruery.github.io/platform-core/",
  "license": "MIT",
  "authors": [
    {
      "name": "viktore zara",
      "email": "viktore.zara@gmail.com",
      "homepage": "https://github.com/gzilt"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": ">=5.3.3",

    "symfony/symfony":  "^2.8 || ^3.0",

    "twig/twig": "~1.20|~2.0",
    "twig/extensions": "~1.0",

    "doctrine/orm": "^2.4 || ^2.5",
    "doctrine/doctrine-bundle": "~1.5",

    "sonata-project/easy-extends-bundle": "^2.1",
    "sonata-project/doctrine-extensions": "^1.0",
    "sonata-project/intl-bundle": "^2.2",
    "sonata-project/sonata-composer": "dev-master",

    "sonata-project/admin-bundle": "^3.0",
    "sonata-project/block-bundle": "^3.0",
    "sonata-project/doctrine-orm-admin-bundle": "^3.0",
    "sonata-project/user-bundle": "^3.0",

    "stof/doctrine-extensions-bundle": "^1.2.2"
  },
  "replace": {
    "bruery/core-bundle": "self.version",
    "bruery/admin-bundle": "self.version",
    "bruery/block-bundle": "self.version",
    "bruery/doctrine-orm-admin-bundle": "self.version"
  },
  "autoload": {
    "psr-4": { "Bruery\\": "src/bundles/" }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
}
